<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="Pour tout le monde"
        android:textColor="@color/background"
        android:textSize="40sp" />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_family" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="De la primaire jusqu'aux études supérieurs. Pour une matières ou l'ensemble du programme, pour un ou plusieurs de vos enfants, MySchool vous suivra dans votre scolarité. "        android:textColor="#FFF"
        android:textSize="15sp" />



</RelativeLayout>
